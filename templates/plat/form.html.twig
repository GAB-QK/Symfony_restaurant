{% extends 'base.html.twig' %}
{% block body %}
<div class="container mt-5">
		<h1 class="text-center">Add a new Plat to the menu</h1>
		<form method="post">
			{{ form_start(form) }}
			<div class="form-group">
				<h4>Plat :</h4>
				{{ form_row(form.name)}}
			</div>
			<div class="form-group">
				<h4>Price:
				</h4>
				{{ form_row(form.price)}}
			</div>
			<br>
			<button type="submit" class="btn btn-primary">Submit</button>
			{{ form_end(form) }}
		</form>
	</div>

{% endblock %}
