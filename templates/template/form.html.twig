{% extends 'base.html.twig' %}
{% block body %}
	<div class="container mt-5">
		<h1 class="text-center">Add a new templates</h1>
		<form method="post">
			{{ form_start(form) }}
			<div class="form-group">
			<h3>Nom de la template:</h3>
				{{ form_row(form.name)}}
			</div>
			<div class="form-group">
			<h3>Image de la template:</h3>
				{{ form_row(form.image)}}
			</div>
			<div class="form-group">
			<h3>Date de la template:</h3>
				{{ form_row(form.date)}}
			</div>
			<div class="form-group">
				<h3>Tag de la template:</h3>
				{{ form_row(form.tag)}}
			</div>
			<br>
			<button type="submit" class="btn btn-primary">Submit</button>
			{{ form_end(form) }}
			<hr>
		</form>
	</div>

{% endblock %}
