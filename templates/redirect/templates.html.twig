{% extends 'base.html.twig' %}

{% block title %}Templates-TempCode
{% endblock %}

{% block body %}
	<div class="container">
		<div class="card">
			<div class="card-header">
				<h2>Create a New Template</h2>
			</div>
			<div class="card-body">
				<div class="alert alert-primary" role="alert">
					Do you want to create a new template?
					<a href="template/create">
						<button type="button" class="btn btn-primary mr-2">Create</button>
					</a>
				</div>
			</div>
		</div>
	</div>

	{% for template in templates %}
		<li class="list-group-item">
			<div class="d-flex justify-content-between">
				<div>
					{{template.name}}
					-
					{{template.image}}
					-
					{{template.tag}}
				</div>
			</div>
		</li>
	{% endfor %}

	$searchedValue = $request->query->get('searchedValue');
	$templates = $repository->findBy(['name' => $searchedValue]);


{% endblock %}
