{% extends "base.html.twig" %}
{% block body %}
	{% if is_granted('IS_AUTHENTICATED_FULLY') %}
	<div class="container mt-5">
		<h1 class="text-center">{{menu.name}}</h1>
		<div class="row mt-3">

			<a class="btn btn-dark mr-3" href="/plat/create/{{ menu.id  }}">add a Plat</a>
			<a class="btn btn-dark mr-3" href="/entrees/create/{{ menu.id  }}">Add a Starter</a>
			<a class="btn btn-dark mr-3" href="/boisson/create/{{ menu.id  }}">Add a Drink</a>
			<a class="btn btn-dark mr-3" href="/dessert/create/{{ menu.id  }}">Add a Desert</a>
		</div>
		<div class="row mt-3">
			<div class="col-md-6">
				<h3>Drinks</h3>
				<ul class="list-group">
					{% for drink in drinks %}
						<li class="list-group-item">
							<div class="d-flex justify-content-between">
								<div>
									{{drink.name}}
									-
									{{drink.price}}
									€
								</div>
								<div>
									<a href="/boisson/update/{{drink.id}}" class="btn btn-warning">Edit</a>
									<a href="/boisson/delete/{{drink.id}}" class="btn btn-danger">delete</a>
								</div>
							</div>
						</li>
					{% endfor %}
				</ul>
			</div>
			<div class="col-md-6">
				<h3>Desserts</h3>
				<ul class="list-group">
					{% for dessert in desserts %}
						<li class="list-group-item">
							<div class="d-flex justify-content-between">
								<div>
									{{dessert.name}}
									-
									{{dessert.price}}
									€
								</div>
								<div>
									<a href="/dessert/update/{{dessert.id}}" class="btn btn-warning">Edit</a>
									<a href="/dessert/delete/{{dessert.id}}" class="btn btn-danger">delete</a>
								</div>
							</div>
						</li>

					{% endfor %}
				</ul>
			</div>
		</div>
		<div class="row mt-3">
			<div class="col-md-6">
				<h3>Plats</h3>
				<ul class="list-group">
					{% for plat in plats %}
						<li class="list-group-item">
							<div class="d-flex justify-content-between">
								<div>
									{{plat.name}}
									-
									{{plat.price}}
									€
								</div>
								<div>
									<a href="/plat/update/{{plat.id}}" class="btn btn-warning">Edit</a>
									<a href="/plat/delete/{{plat.id}}" class="btn btn-danger">delete</a>
								</div>
							</div>
						</li>
					{% endfor %}
				</ul>
			</div>
			<div class="col-md-6">
				<h3>Starter</h3>
				<ul class="list-group">
					{% for entree in entrees %}
						<li class="list-group-item">
							<div class="d-flex justify-content-between">
								<div>
									{{entree.name}}
									-
									{{entree.price}}
									€
								</div>
								<div>
									<a href="/entrees/update/{{entree.id}}" class="btn btn-warning">Edit</a>
									<a href="/entrees/delete/{{entree.id}}" class="btn btn-danger">Delete</a>
								</div>
							</div>
						</li>

					{% endfor %}
				</ul>
			</div>
		</div>
	</div>

	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
	{% else %}

		<div class="alert alert-warning alert-dismissible fade show" role="alert">
			You must be logged in to access this page.
			<button type="button" class="btn btn-light" data-dismiss="alert" aria-label="Close">
				<a href="/login">login</a>
			</button>
		</div>

	{% endif %}
{% endblock %}
